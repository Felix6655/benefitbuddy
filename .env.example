# MongoDB (required for default mode)
MONGO_URL=mongodb://localhost:27017
DB_NAME=benefitbuddy

# Base URL for the app
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=https://benefitbuddy.vercel.app

# Admin panel protection
ADMIN_KEY=ChangeMe-SetStrongKey-2026

# Optional: n8n webhook (if set, submissions are forwarded)
# N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook/xxx

# Optional: Neon Postgres (if set, uses Prisma instead of MongoDB)
# DATABASE_URL=postgresql://user:pass@ep-xxx.region.aws.neon.tech/dbname?sslmode=require

# CORS
CORS_ORIGINS=*
